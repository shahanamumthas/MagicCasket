<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/admin/css/orderDetails.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick-theme.min.css"
    integrity="sha512-17EgCFERpgZKcm0j0fEq1YCJuyAWdz9KUtv1EjVuaOz8pDnh/0nZxmU6BBXwaaxqoi9PQXnRWqlcDB027hgv9A=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.css"
    integrity="sha512-yHknP1/AwR+yx26cB1y0cjvQUMvEa2PFzt1c9LlS4pRQ5NOTZFWbhBig+X9G9eYW/8m0/4OXNx8pxJ6z57x0dw=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous" />
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
  <title></title>
</head>

<body>
  <div class="opinions">
    <div class="peopleOpinions">
      <h2>Order Details</h2>
      <!-- <p>Do you Like it?</p> -->
    </div>
    <div class="row">
      <div class="col-lg-12 p-0">
        <div class="testmon">
          <div class="card">
            <h2 class="card-header">
              User Details
            </h2>
            <div class="card-body d-flex align-items-center justify-content-center">
              <div class="card-detailes">
                <h3>
                  <%= data.userId.fname %>
                    <%= data.userId.lname%>
                </h3>
                <p class="card-text">
                  <%= data.userId.email%>
                </p>
                <div class="card-foter">
                  <!-- <img class="cardImage2" src="https://avatars.githubusercontent.com/u/51037193?v=4" alt="" srcset="" /> -->
                  <h5>Address : </h5>
                  <%= orderData.address.state %>
                    <%= orderData.address.city %>
                      <%= orderData.address.housename %>
                        <%= orderData.address.pin %>
                          <br>
                          <hr>
                </div>
                <div class="card-foter">
                  <a href="/admin/invoice?id=<%=orderData._id%>&name=<%= productData.productId.name%>&billId=<%=orderData._id%>" class="btn">Invoice</a>
                </div>
              </div>
            </div>
          </div>

          <div class="card">
            <h1 class="card-header">Order Details</h1>
            <div class="card-body d-flex align-items-center justify-content-center">
              <div class="card-detailes">
                <!-- get order data -->

                <p class="card-text">
                  <%= orderData.paymentStatus%>
                    <%= orderData.time%>
                </p>
                <!-- change order status -->
               <span>Bill Id : </span> <%=orderData._id%>
                 
                    
                      <form action="/admin/changeOrderStatus" method="post">
                        <select name="orderStatus">
                          <option value="selected">
                            <%= productData.orderStatus%>
                          </option>
                          <option value="Dispatched">Dispatched</option>
                          <option value="readyToShip">Ready to ship</option>
                          <option value="outForDelivery">out for delivery</option>
                          <option value="delivered">delivered</option>
                        </select>
                        <input type="hidden" value="<%=orderData._id%>" name="orderId">
                        <input type="hidden" value="<%= productData.productId._id%>" name="productId">
                        <input type="hidden" value="<%=data.userId._id%>" name="userId">
                        <input type="submit" value="submit">
                      </form>
                      <%= productData.orderStatus%>
              </div>
            </div>
          </div>
          <!-- get product details -->
          <div class="card">
            <h1 class="card-header">Product Details</h1>
            <div class="card-body d-flex align-items-center justify-content-center">
              <div class="card-detailes">
                <p class="card-text">
                  <%= productData.productId.name%>
                    <br>
                    <%= productData.productId.price%>
                      <br>
                      <%= productData.productId.stock%>
                        <br>
                        <img src="/<%=productData.productId.images[0].path%>" height="100px" width="100px" alt="">

                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


  <script>$(document).ready(function () {
      $(".testmon").slick({
        centerMode: true,
        centerPadding: "350px",
        dots: true,
        arrows: false,
        slidesToScroll: 1,
        slidesToShow: 1,
        responsive: [
          {
            breakpoint: 1250,
            settings: {
              centerMode: true,
              centerPadding: "250px",
              slidesToShow: 1
            }
          },
          {
            breakpoint: 990,
            settings: {
              centerMode: true,
              centerPadding: "150px",
              slidesToShow: 1
            }
          },
          {
            breakpoint: 768,
            settings: {
              centerMode: true,
              centerPadding: "50px",
              slidesToShow: 1
            }
          },
          {
            breakpoint: 480,
            settings: {
              centerMode: true,
              centerPadding: "15px",
              slidesToShow: 1
            }
          }
        ]
      });
    });
  </script>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.js"
    integrity="sha512-HGOnQO9+SP1V92SrtZfjqxxtLmVzqZpjFFekvzZVWoiASSQgSr4cw9Kqd2+l8Llp4Gm0G8GIFJ4ddwZilcdb8A=="
    crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <script src="JS.js"></script>
</body>

</html>